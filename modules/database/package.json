{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@erento/nestjs-module-database",
  "version": "1.0.0",
  "description": "NestJS module to work with DB with sequelize.",
  "main": "dist/public_api.js",
  "types": "./dist/public_api.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "tslint -c tslint.json --fix -e \"**/node_modules/**\" -p ./tsconfig.json",
    "lint-staged": "lint-staged",
    "prebuild": "rm -rf dist && npm run lint && npm run test",
    "test": "jest"
  },
  "keywords": [],
  "author": "Erento GmbH <developers@erento.com> (https://www.erento.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/erento/nestjs-modules.git"
  },
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": ">=5.3",
    "typescript": ">=2.7 <2.9",
    "sequelize": ">=4.38.1",
    "sequelize-typescript": "0.6.5"
  },
  "dependencies": {
    "sequelize": "4.38.1",
    "sequelize-typescript": "0.6.5"
  },
  "devDependencies": {
    "@nestjs/common": "5.3.9",
    "@types/jest": "23.3.2",
    "@types/node": "10.10.3",
    "husky": "1.1.0",
    "jest": "23.6.0",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.3.2",
    "ts-jest": "23.10.1",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "2.8.3"
  },
  "precommit": [
    "lint-staged"
  ],
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
